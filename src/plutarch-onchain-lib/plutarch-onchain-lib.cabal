cabal-version: 3.4
name:          plutarch-onchain-lib
version:       0.3.0.0
synopsis:      High-performance onchain-library for plutarch
license:       Apache-2.0
license-file:  LICENSE
maintainer:    j-mueller@users.noreply.github.com
author:        Djed team @ IOG
homepage:      https://github.com/input-output-hk/catalyst-onchain-libs
bug-reports:   https://github.com/input-output-hk/catalyst-onchain-libs
description:
  Please see the README on GitHub at <https://github.com/input-output-hk/catalyst-onchain-libs>

build-type:    Simple

flag log-debug
  description:
    Define DEBUG CPP macro via -DDEBUG to enable logging in offchain

  default:     False
  manual:      True

common lang
  default-language:   Haskell2010
  default-extensions:
    DataKinds
    DeriveAnyClass
    DeriveFoldable
    DeriveFunctor
    DeriveGeneric
    DeriveLift
    DeriveTraversable
    DerivingStrategies
    DerivingVia
    ExplicitForAll
    FlexibleContexts
    GADTs
    GeneralizedNewtypeDeriving
    ImportQualifiedPost
    KindSignatures
    LambdaCase
    MultiParamTypeClasses
    NumericUnderscores
    RankNTypes
    ScopedTypeVariables
    StandaloneDeriving
    TypeApplications
    TypeFamilies
    TypeOperators
    ViewPatterns

  ghc-options:
    -Wall -Wnoncanonical-monad-instances -Wunused-packages
    -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities

  if flag(log-debug)
    cpp-options: -DDEBUG

library
  import:          lang
  exposed-modules:
    Plutarch.Core.Context
    Plutarch.Core.Crypto
    Plutarch.Core.Eval
    Plutarch.Core.Integrity
    Plutarch.Core.Internal.Builtins
    Plutarch.Core.List
    Plutarch.Core.PByteString
    Plutarch.Core.Scripts
    Plutarch.Core.Time
    Plutarch.Core.Trace
    Plutarch.Core.Unroll
    Plutarch.Core.Utils
    Plutarch.Core.ValidationLogic
    Plutarch.Core.Validators
    Plutarch.Core.Value
    Plutarch.Lib
    Plutarch.MerkleTree.Helpers
    Plutarch.MerkleTree.Merkling
    Plutarch.MerkleTree.PatriciaForestry

  hs-source-dirs:  lib
  build-depends:
    , aeson
    , aeson-pretty
    , base                 >=4.14 && <4.20
    , base16-bytestring
    , bytestring
    , cardano-binary
    , generics-sop
    , plutarch
    , plutarch-ledger-api
    , plutus-core
    , plutus-ledger-api
    , plutus-tx
    , prettyprinter
    , tasty-hunit
    , text

test-suite plutarch-onchain-lib-tests
  import:         lang
  type:           exitcode-stdio-1.0
  main-is:        Test.hs
  other-modules:
    Plutarch.List.Test
    Plutarch.MerkleTree.Test
    TestUtils

  hs-source-dirs: test
  build-depends:
    , base
    , bytestring
    , cardano-crypto-class
    , plutarch
    , plutarch-ledger-api
    , plutarch-onchain-lib
    , plutarch-testlib
    , plutus-core
    , plutus-ledger-api
    , quickcheck-instances
    , tasty
    , tasty-hunit
    , tasty-quickcheck
    , text

test-suite plutarch-onchain-lib-bench
  import:         lang
  type:           exitcode-stdio-1.0
  main-is:        Bench.hs
  hs-source-dirs: test
  build-depends:
    , base
    , plutarch
    , plutarch-ledger-api
    , plutarch-onchain-lib
    , plutarch-testlib
    , plutus-ledger-api
    , plutus-tx
    , tasty
